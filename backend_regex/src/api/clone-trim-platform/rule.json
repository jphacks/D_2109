{
	"style_check": {
		"blank_format": {
			"action": true
		},
		"indent": {
			"type": " ",
			"num": 4,
			"tab_num": 4
		},
		"count_word": {
			"action": true,
			"length": 80
		},
		"line_space": {
			"class_or_global_func": {
				"action": true
			},
			"method": {
				"action": true
			}
		}
	},
	"naming_check": {
		"class_case": {
			"snake": false,
			"CapWords": true
		},
		"method_case": {
			"snake": true,
			"CapWords": false
		},
		"value_case": {
			"snake": false,
			"CapWords": true
		}
	},
	"import_check": {
		"grouping": true,
		"sorting": true
	}
}